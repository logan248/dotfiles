#!/usr/bin/bash


# Navigations
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias cl="clear && ls -a"

#Shortcuts
alias p="cd /storage/sdcard0/Projects/"
alias dl="cd /storage/sdcard0/Download/"
alias t="cd /storage/sdcard0/Termux/"


#Git 
alias gs="git status"
alias gi="git init"
alias gc="git commit -m "
alias ga="git add "
alias g.="git add ."

# IP addresses
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias localip="ipconfig getifaddr en0"
alias ips="ifconfig -a | grep -o 'inet6\? \(addr:\)\?\s\?\(\(\([0-9]\+\.\)\{3\}[0-9]\+\)\|[a-fA-F0-9:]\+\)' | awk '{ sub(/inet6? (addr:)? ?/, \"\"); print }'"

# Human-readable disk usage.
alias dfh="df -Tha --total"

# Reload shell.
 alias reload="exec $SHELL -l"
